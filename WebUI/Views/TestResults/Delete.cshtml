@model Domain.Entities.TestResult

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Test Result?</h3>
<div>
    <h4>TestResult</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Test Result
        </dt>

        <dd>
            <span style="color: @Model.TestResultColor">@Model.TestResultValue</span>
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestResultDescription)
        </dd>
        <dt>
            Color
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestResultColor)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "TestResultsList", null, new { @class = "btn btn-default" })
            @* <input type="submit" value="Delete" class="btn btn-default" style="margin-left: 10em" /> *@
        </div>
    }
</div>
