@model Domain.Entities.Component

@{
    ViewBag.Title = "Delete Component";
}

<h2>Delete Component</h2>

<h3>Are you sure you want to delete this Component?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Component
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ComponentName)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ComponentDescription)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group" style=" margin-left: 10%; max-width: 22.5%;">
                @Html.ActionLink("Back to List", "ComponentsList", null, new { @class = "btn btn-default pull-left" })
                <input type="submit" value="Delete" class="btn btn-danger pull-right"/>
        </div>
    }
</div>
