@model Domain.Entities.Component

@{
    ViewBag.Title = "Delete Component";
}

<h2>Delete Component</h2>

<h3>Are you sure you want to delete this Component?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Component
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ComponentName)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ComponentDescription)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "ComponentsList", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
