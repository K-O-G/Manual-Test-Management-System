@model Domain.Entities.Component

@{
    ViewBag.Title = "Create Component";
}

<h2>Create Component</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ComponentName,"Component", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ComponentName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ComponentName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ComponentDescription,"Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ComponentDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ComponentDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: 10%; max-width: 22.5%;">
            @Html.ActionLink("Back to List", "ComponentsList", null, new { @class = "btn btn-default pull-left" })
            <input type="submit" value="Create" class="btn btn-success pull-right" />

        </div>
    </div>
}

