@model Domain.Entities.CheckLists.CheckListItem

@{
    ViewBag.Title = "Edit CheckListItem";
}

<h2>Edit CheckList Item</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CheckListItemId)

        <div class="form-group" style="margin-bottom: 0px;">
            @Html.LabelFor(model => model.CheckListId,"CheckList: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p style="margin-top:7px; margin-left: 13px;">@Model.CheckListEntity.CheckListName</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Procedure,"Procedure: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Procedure, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Procedure, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpectedResult, "Expected Result", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExpectedResult, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExpectedResult, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group" style=" margin-left: 10%; max-width: 22.5%;">
            @Html.ActionLink("Back to List", "Details", "CheckLists", new { id = Model.CheckListId }, new { @class = "btn btn-default pull-left" })
            <input type="submit" value="Save" class="btn btn-success pull-right" />
        </div>
    </div>
}


