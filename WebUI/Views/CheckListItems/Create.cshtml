@model Domain.Entities.CheckLists.CheckListItem

@{
    ViewBag.Title = "Create CheckList item";
}

<h2>Create CheckList item</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(model => model.CheckListId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.CheckListEntity.CheckListName, "CheckList : ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="margin-top: 6px;">
            @Html.DisplayFor(model => model.CheckListEntity.CheckListName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Procedure, "Procedure : ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Procedure, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Procedure, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ExpectedResult, "Expected Result : ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ExpectedResult, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ExpectedResult, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group" style="margin-left: 10%; max-width: 22.5%;">
        @Html.ActionLink("Back to List", "Details","CheckLists",new { id = Model.CheckListEntity.CheckListEntityId}, new { @class = "btn btn-default pull-left" })
        <input type="submit" value="Create" class="btn btn-success pull-right"/>
    </div>
</div>
}
