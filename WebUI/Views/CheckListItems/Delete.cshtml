@model Domain.Entities.CheckLists.CheckListItem

@{
    ViewBag.Title = "Delete case item";
}

<h2>Delete case item</h2>

<h4>Are you sure you want to delete this case item?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            CheckList :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckListEntity.CheckListName)
        </dd>
        <dt>
            Id :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckListItemIdPublic)
        </dd>

        <dt>
            Procedure :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Procedure)
        </dd>

        <dt>
            Expected result :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpectedResult)
        </dd>
        <dt>
            Test result :
        </dt>

        <dd>
            @if (Model != null)
            {
                <span style="color: @Model.CheckListTestResult.TestResultColor">@Model.CheckListTestResult.TestResultValue</span>
            }
        </dd>

        <dt>
            Comment :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckListComment)
        </dd>

        <dt>
            Last Execution Date
        </dt>

        <dd>
            <p> @(Model.LastExecutionDateTime.HasValue ? Model.LastExecutionDateTime.Value.ToShortDateString() : "")</p>
        </dd>

    </dl>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions" style=" margin-left: 10%; max-width: 22.5%;">
            <input type="submit" value="Delete" class="btn btn-danger pull-right" /> 
            @Html.ActionLink("Back to List", "Details","CheckLists",new{id=Model.CheckListId},new {@class = "btn btn-default pull-left"})
        </div>
    }
    
</div>
