@using Domain.Entities
@using Domain.Entities.TestCases
@model Domain.Entities.TestCases.TestCaseEntity

@{
    ViewBag.Title = "Test Case execute";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Test Case Execute</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Test Case :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestCaseName)
        </dd>
        <dt>
            Description :
        </dt>

        <dd style="width: 50%;">
            @Html.DisplayFor(model => model.TestCaseDescription)
        </dd>
        <dt>
            Creator :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorCaseUser.UserName)
        </dd>
        <dt>
            Last Editor :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastEditorCaseUser.UserName)
        </dd>

        <dt>
            Last Edition :
        </dt>

        <dd>
            <span>@Model.LastEditionDateTime.ToShortDateString()</span>
        </dd>
        <dt>
            Priority :
        </dt>

        <dd>
            <span style="color: @Model.Priority.PriorityColor">@Model.Priority.PriorityName</span>
        </dd>
        <dt>
            Components :
        </dt>
        <dd>
            <ul style="margin-left: -1.5%;">
                @foreach (Component c in Model.Components)
                {
                    <li>@c.ComponentName</li>
                }
            </ul>
        </dd>

    </dl>
    <table class="table table-bordered">
        <tr>
            <th style="width: 3%">
                Id
            </th>
            <th style="width: 12%">
                Summary
            </th>
            <th style="width: 12%">
                Preconditions
            </th>
            <th style="padding: 0; width: 40%">
                <table class=" table table-bordered" style="width: 100%;margin-bottom: 0">
                    <tr>
                        <th style="text-align: center" colspan="4">Case Steps</th>
                    </tr>
                    <tr>
                        <th style="width: 2%">
                            #
                        </th>
                        <th style="width: 37%">
                            Action
                        </th>
                        <th style="width: 37%">
                            Expected result
                        </th>
                        <th style="width: 24%">
                            Test result
                        </th>
                    </tr>
                </table>
            </th>
            <th style="width: 7%">
                Comment
            </th>
            <th style="width: 7%">
                Last Executor
            </th>
            <th style="width: 9%">
                Last Execution Date
            </th>

            <th style="width: 8%"></th>
        </tr>

        @foreach (var item in Model.Cases)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.CaseIdPublic)
                </td>
                <td style="width: 12%">
                    @Html.DisplayFor(modelItem => item.CaseSummary)
                </td>
                <td style="width: 12%">
                    @Html.DisplayFor(modelItem => item.CasePreconditions)
                </td>
                <td style="padding: 0; width: 40%">
                    <table class="table table-bordered" style="margin-bottom: 0; width: 100%">
                        @foreach (var step in item.CaseSteps)
                        {
                            <tr data-stepid="@step.CaseStepId">
                                <td style="width: 2%">
                                    <span>@step.CaseStepNumber</span>
                                </td>
                                <td style="width: 37%">
                                    @Html.DisplayFor(caseStep => step.CaseStepDescription)
                                </td>
                                <td style="width: 37%">
                                    @Html.DisplayFor(caseStep => step.CaseStepExpectedResult)
                                </td>
                                <td style="width: 24%">
                                    @Html.DropDownListFor(caseStep => step.CaseStepResult.TestResultId, ViewBag.TestResults as SelectList, new {@class = "form-control"})
                                </td>
                            </tr>
                        }
                    </table>
                </td>
                <td style="width: 7%">
                    @Html.TextAreaFor(modelItem => item.CaseComment, new {htmlAttributes = new {@class = "form-control"}})
                </td>
                <td style="width: 7%">
                    @Html.DisplayFor(modelItem => item.LastExecutorCaseUser.UserName)
                </td>
                <td style="width: 9%">
                    <span>
                        @(item.LastExecutionDateTime.HasValue ? item.LastExecutionDateTime.Value.ToShortDateString() : "")
                    </span>
                </td>
                <td style="width: 8%;text-align: center">
                    <input value="Save Run" type="button" class="btn btn-success _saveTestEntitiesExecute" data-id="@item.CaseId"/>
                </td>
            </tr>
        }
    </table>
</div>
<p>

    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
