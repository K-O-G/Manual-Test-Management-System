@using Domain.Entities.TestCases
@model Domain.Entities.TestCases.TestCaseEntity

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>TestCaseEntity</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Test Case:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestCaseName)
        </dd>
        <dt>
            Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestCaseDescription)
        </dd>
        <dt>
            Creator:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorCaseUser.UserName)
        </dd>
        <dt>
            Last Editor:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastEditorCaseUser.UserName)
        </dd>

        <dt>
            Last Edition:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastEditionDateTime)
        </dd>

    </dl>
    <p>
        @Html.ActionLink("Create New", "Create", "Cases", new { id = Model.TestCaseEntityId }, new { @class = "btn btn-default" })
    </p>
    <table class="table">
        <tr>
            <th style="max-width: 25%">
                Summary
            </th>
            <th>
                Preconditions
            </th>
            <th>
                Case steps
            </th>
            <th>
                Test result
            </th>
            <th></th>
            <th>
                Comment
            </th>
            <th>
                Last Executor
            </th>
            <th>
                Last Execution
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.Cases)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CaseSummary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CasePreconditions)
                </td>
                <td>
                    <table class="table">
                        @foreach (var step in item.CaseSteps)
                        {
                            <tr data-stepid="@step.CaseStepId">
                                <td>
                                    @Html.DisplayFor(caseStep => step.CaseStepNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(caseStep => step.CaseStepDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(caseStep => step.CaseStepExpectedResult)
                                </td>
                                <td>
                                    @Html.DropDownListFor(caseStep => step.CaseStepResult.TestResultId, ViewBag.TestResults as SelectList)
                                </td>
                            </tr>
                        }
                    </table>
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.CaseComment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastExecutorCaseUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastExecutionDateTime)
                </td>
                <td>
                    <input value="Save Execute" type="button" class="btn btn-default _saveTestEntitiesExecute" data-id="@item.CaseId" />
                </td>
            </tr>
        }
    </table>
</div>
<p>
   
    @Html.ActionLink("Back to List", "Index",null,new{@class="btn btn-default"})
</p>
