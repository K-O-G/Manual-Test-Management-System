@using Domain.Entities
@using Domain.Entities.TestCases
@using Domain.Helpers
@model Domain.Entities.TestCases.TestCaseEntity

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>TestCaseEntity</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Test Case :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TestCaseName)
        </dd>
        <dt>
            Description :
        </dt>

        <dd style="width: 50%;">
            @Html.DisplayFor(model => model.TestCaseDescription)
        </dd>
        <dt>
            Creator :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorCaseUser.UserName)
        </dd>
        <dt>
            Last Editor :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastEditorCaseUser.UserName)
        </dd>

        <dt>
            Last Edition Date :
        </dt>

        <dd>
            <p>@Model.LastEditionDateTime.ToShortDateString()</p>
        </dd>
        <dt>
            Priority :
        </dt>

        <dd>
            <span style="color: @Model.Priority.PriorityColor">@Model.Priority.PriorityName</span>
        </dd>
        <dt>
            Components :
        </dt>
        <dd>
            <ul style="margin-left: -1.5%;">
                @foreach (Component c in Model.Components)
                {
                    <li>@c.ComponentName</li>
                }
            </ul>
        </dd>

    </dl>
    @if (Repository.CurrentUser.UserTestCreator)
    {
        <p>
            @Html.ActionLink("Create new Case", "Create", "Cases", new { id = Model.TestCaseEntityId }, new { @class = "btn btn-success" })
        </p>
    }
    <table class="table table-bordered table-sm">
        <tr>
            <th style="width: 3%">
                Id
            </th>
            <th style="width: 12%">
                Summary
            </th>
            <th style="width: 12%">
                Preconditions
            </th>
            <th style="padding: 0; width: 40%">
                <table class="table-bordered" style="width:100%">
                    <tr>
                        <th style="text-align: center" colspan="4">Case Steps</th>
                    </tr>
                    <tr>
                        <th style="width: 2%">
                            #
                        </th>
                        <th style="width: 37%">
                            Action
                        </th>
                        <th style="width: 37%">
                            Expected result
                        </th>
                        <th style="width: 24%">
                            Test result
                        </th>
                    </tr>
                </table>
            </th>
            <th>
                Comment
            </th>
            <th style="width: 7%">
                Last Executor
            </th>
            <th style="width: 9%">
                Last Execution Date
            </th>
            @if (Repository.CurrentUser.UserTestCreator)
            {
                <th style="width: 8%"></th>
            }
        </tr>

        @foreach (var item in Model.Cases)
        {
            <tr>
                <td style="width: 3%">
                    @Html.DisplayFor(modelItem => item.CaseIdPublic)
                </td>
                <td style="width: 12%">
                    @Html.DisplayFor(modelItem => item.CaseSummary)
                </td>
                <td style="width: 12%">
                    @Html.DisplayFor(modelItem => item.CasePreconditions)
                </td>
                <td style="padding: 0">
                    <table class="table-bordered"style="width: 100%">

                        @foreach (var step in item.CaseSteps)
                        {
                            <tr>
                                <td style="width: 2%">
                                    @Html.DisplayFor(caseStep => step.CaseStepNumber)
                                </td>
                                <td style="width: 37%">
                                    @Html.DisplayFor(caseStep => step.CaseStepDescription)
                                </td>
                                <td style="width: 37%">
                                    @Html.DisplayFor(caseStep => step.CaseStepExpectedResult)
                                </td>
                                <td style="width: 24%">
                                    <span style="color: @step.CaseStepResult.TestResultColor">@step.CaseStepResult.TestResultValue</span>
                                </td>
                            </tr>
                        }
                    </table>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CaseComment)
                </td>
                <td style="width: 7%">
                    @Html.DisplayFor(modelItem => item.LastExecutorCaseUser.UserName)
                </td>
                <td style="width: 8%">
                    <span>
                        @(item.LastExecutionDateTime.HasValue ? item.LastExecutionDateTime.Value.ToShortDateString() : "")
                    </span>
                </td>
                @if (Repository.CurrentUser.UserTestCreator)
                {
                    <td style="text-align: center;width: 8%">

                        @Html.ActionLink("Edit", "Edit", "Cases", new { id = item.CaseId }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Delete", "Delete", "Cases", new { id = item.CaseId }, new { @class = "btn btn-danger" })

                    </td>
                }
            </tr>
        }
    </table>
</div>
<p>
    @if (Repository.CurrentUser.UserTestCreator)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.TestCaseEntityId }, new { @class = "btn btn-default pull-right" })
    }
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default pull-left" })
</p>
