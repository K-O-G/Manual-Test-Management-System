@using Domain.Helpers
@model IEnumerable<Domain.Entities.TestCases.TestCaseEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Test Cases</h2>
@if (Repository.CurrentUser.UserTestCreator)
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-success"})
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>
            Test Case
        </th>
        <th>
            Priority
        </th>
        <th style="width: 45%;">
            Description
        </th>
        <th>
            Creator
        </th>
        <th>
            Last Editor
        </th>
        <th>
            Last Edition Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TestCaseName)
            </td>
            <td>
                @if (Model != null)
                {
                    <span style="color: @item.Priority.PriorityColor">@item.Priority.PriorityName</span>
                }
            </td>
            <td style="width: 45%;">
                @Html.DisplayFor(modelItem => item.TestCaseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorCaseUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastEditorCaseUser.UserName)
            </td>
            <td>
                <span>@item.LastEditionDateTime.ToShortDateString()</span>
            </td>
            <td style="text-align: center">
                @if (Repository.CurrentUser.UserTestCreator)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.TestCaseEntityId }, new { @class = "btn btn-default" })
                }
                @if (Repository.CurrentUser.UserTestExecutor)
                {
                    @Html.ActionLink("Execute", "Execute", new { id = item.TestCaseEntityId }, new { @class = "btn btn-warning" })
                }

                @Html.ActionLink("Details", "Details", new { id = item.TestCaseEntityId }, new { @class = "btn btn-info" })

                @if ((Repository.CurrentUser.UserId == item.CreatorCaseUser.UserId && Repository.CurrentUser.UserTestCreator) || Repository.CurrentUser.UserAdmin)
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.TestCaseEntityId }, new { @class = "btn btn-danger" })
                }
            </td>
        </tr>
    }

</table>
