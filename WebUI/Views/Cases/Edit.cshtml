@model Domain.Entities.TestCases.Case

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Case</h4>
    <hr />
    @Html.HiddenFor(model=>model.TestCaseId)
    @Html.HiddenFor(model=>model.CaseId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.TestCase.TestCaseName, "Test Case :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="margin-top: 6px;">
            @Html.DisplayFor(model => model.TestCase.TestCaseName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CaseSummary, "Summary : ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CaseSummary, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CaseSummary, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CasePreconditions, "Preconditions : ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CasePreconditions, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CasePreconditions, "", new { @class = "text-danger" })
        </div>
    </div>


    <div>
        <table class="table table-bordered">
            <tr>
                <th>
                    Case Step #
                </th>
                <th>
                    Description
                </th>
                <th>Expected Result</th>
                <th></th>
            </tr>
            @foreach (var item in Model.CaseSteps)
            {
                <tr class="_stepRow">
                    <td>
                        <p class="_stepNumber"></p>
                    </td>
                    <td>
                        @Html.EditorFor(it => item.CaseStepDescription, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                    <td>
                        @Html.EditorFor(it => item.CaseStepExpectedResult, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                    <td>
                        <button type="button" class="_removeStep btn btn-danger" value="Remove">Remove</button>
                    </td>
                </tr>
            }

            <tr class="_footerTr">
                <td colspan="4">
                    <button type="button" id="add_step" , class="btn btn-default" style="width: 100%"> Add Step </button>
                </td>
            </tr>

            <tr id="rowTemplate" style="display: none">
                <td>
                    <p class="_stepNumber"></p>
                </td>
                <td>
                    <input type="text" value="" class="_stepDescription form-control" />
                </td>
                <td>
                    <input type="text" value="" class="_stepExpectedResult form-control" />
                </td>
                <td>
                    <button type="button" value="" class="_removeStep btn btn-danger" value="Remove">Remove</button>
                </td>
            </tr>
        </table>
    </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", "TestCaseEntities", new { id = Model.TestCaseId }, new { @class = "btn btn-default pull-left"})
    <input type="submit" value="Save" class="btn btn-success pull-right" id="SaveEd"/>
</div>
