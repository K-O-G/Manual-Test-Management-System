@model Domain.Entities.TestCases.Case

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this case?</h3>
<div>
    <h4>Case</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaseIdPublic)
        </dd>

        <dt>
            Summary : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaseSummary)
        </dd>

        <dt>
            Preconditions : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CasePreconditions)
        </dd>

        <dt>
            Comment : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaseComment)
        </dd>

        <dt>
            Last Execution : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastExecutionDateTime.Value.ToShortDateString())
        </dd>

    </dl>
    <div style="padding: 0">
        <table class="table table-bordered">
            <tr>
                <th>
                    Case Step #
                </th>
                <th>
                    Description
                </th>
                <th>Expected Result</th>
            </tr>

            @foreach (var item in Model.CaseSteps)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(it=>item.CaseStepNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(it => item.CaseStepDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(it => item.CaseStepExpectedResult)
                    </td>
                </tr>
            }
        </table>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "Details", "TestCaseEntities", new { id = Model.TestCaseId }, new { @class = "btn btn-default pull-left" })
            <input type="submit" value="Delete" class="btn btn-danger pull-right" />
        </div>
    }
</div>
